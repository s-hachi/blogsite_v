  <div class="row">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <img src="<%= blog.image %>">
        </div>
        <div class="card-content">
          <span class="card-title"><%= blog.title %></span>
          <p><%= blog.text %></p>
        </div>
        <div class="card-action">
          <% if user_signed_in? %>
            <li>
              <%= link_to '編集', "/blogs/#{blog.id}/edit", method: :get %>
            </li>
            <li>
              <%= link_to '削除', "/blogs/#{blog.id}", method: :delete %>
            </li>
          <% end %>
        </div>
      </div>
    </div>
  </div>
